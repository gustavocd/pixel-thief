{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "importsNotUsedAsValues": "preserve",
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"]
}
